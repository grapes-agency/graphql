{
  "name": "@grapes-agency/graphql",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest --verbose",
    "release": "lerna version --conventional-commits -m \"chore(release): publish :tada:\"",
    "lint": "eslint --max-warnings 0 --ext ts,tsx --cache packages",
    "publish": "lerna run build && lerna publish from-package"
  },
  "author": "",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@grapes-agency/apollo-link-local-federation": "file:packages/apollo-link-local-federation",
    "@grapes-agency/apollo-link-local-schema": "file:packages/apollo-link-local-schema",
    "@grapes-agency/apollo-link-webworker": "file:packages/apollo-link-webworker",
    "@grapes-agency/data-source": "file:packages/data-source",
    "@grapes-agency/tiny-graphql-runtime": "file:packages/tiny-graphql-runtime"
  },
  "prettier": "@grapes-agency/eslint-config/prettier",
  "eslintConfig": {
    "extends": [
      "@grapes-agency/eslint-config/rules/base",
      "@grapes-agency/eslint-config/rules/prettier"
    ],
    "rules": {
      "no-loop-func": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/consistent-type-assertions": "off",
      "no-restricted-syntax": "off",
      "no-param-reassign": "off",
      "no-continue": "off",
      "consistent-return": "off",
      "complexity": "off",
      "default-case": "off",
      "class-methods-use-this": "off"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "babel-jest",
      "^.+\\.(gql|graphql)$": "@jagi/jest-transform-graphql"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "modulePathIgnorePatterns": [
      "/dist/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@grapes-agency/)"
    ],
    "testMatch": [
      "<rootDir>/packages/*/src/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@apollo/client": "^3.3.21",
    "@grapes-agency/apollo-link-local-schema": "file:../apollo-link-local-schema/dist",
    "@types/lodash": "^4.14.171",
    "@types/zen-observable": "^0.8.1",
    "graphql": "^15.4.0",
    "graphql-scalars": "^1.4.1",
    "graphql-tag": "^2.11.0"
  }
}
