{
  "name": "@grapes-agency/graphql",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest --verbose",
    "release": "lerna version --conventional-commits -m \"chore(release): publish :tada:\"",
    "lint": "eslint --max-warnings 0 --ext ts,tsx --cache packages",
    "build": "lerna run build --scope @grapes-agency/tiny-graphql-runtime && lerna run build --scope @grapes-agency/apollo-link-local-schema && lerna run build --scope @grapes-agency/apollo-link-local-federation",
    "publish": "npm run build && lerna publish from-package"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grapes-agency/eslint-config": "^1.5.7",
    "typescript": "^4.3.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@jagi/jest-transform-graphql": "^1.0.2",
    "@types/jest": "^26.0.24",
    "graphql": "^15.5.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "rollup": "^2.52.8",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-copy-glob": "^0.3.1",
    "rollup-plugin-graphql-tag": "^0.1.0",
    "rollup-plugin-typescript2": "^0.30.0"
  },
  "prettier": "@grapes-agency/eslint-config/prettier",
  "eslintConfig": {
    "extends": [
      "@grapes-agency/eslint-config/rules/base",
      "@grapes-agency/eslint-config/rules/prettier"
    ],
    "rules": {
      "no-loop-func": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/consistent-type-assertions": "off",
      "no-restricted-syntax": "off",
      "no-param-reassign": "off",
      "no-continue": "off",
      "consistent-return": "off",
      "complexity": "off",
      "default-case": "off",
      "class-methods-use-this": "off"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "babel-jest",
      "^.+\\.(gql|graphql)$": "@jagi/jest-transform-graphql"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "modulePathIgnorePatterns": [
      "/dist/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@grapes-agency/)"
    ],
    "testMatch": [
      "<rootDir>/packages/*/src/**/*.test.ts"
    ]
  }
}
